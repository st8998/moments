source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.1'

# database
gem 'sqlite3'

# view
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'slim'
gem 'react-rails'
gem 'jquery-rails'

# infrastructure
gem 'bcrypt-ruby', '~> 3.0.0'
gem 'sucker_punch'
gem 'rails-observers'
gem 'elasticsearch'
gem 'carrierwave'
gem 'mini_magick'

# controller
gem 'decent_exposure'

# api
gem 'rabl'
gem 'oj'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development do
  gem 'thin'
  gem 'quiet_assets'
end

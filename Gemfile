ruby '2.0.0'

source 'https://rubygems.org'

gem 'rails', '~> 4.1.0.beta1'

# database
gem 'pg'

# view
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'slim'
gem 'react-rails'
gem 'jquery-rails'

# infrastructure
gem 'bcrypt-ruby', '~> 3.0.0'
gem 'sucker_punch'
gem 'rails-observers'
gem 'elasticsearch'
gem 'dragonfly'

# controller

# api
gem 'oj'
gem 'grape'
gem 'grape-entity'

# monitoring
gem 'newrelic_rpm'
gem 'newrelic-grape'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development do
  gem 'spring'
  gem 'thin'
  gem 'quiet_assets'
end
